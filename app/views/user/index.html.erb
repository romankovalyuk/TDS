<h1 class="text-center">Users</h1>


<% @users.each do |user| %>
<hr/>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-1">
      <img class="ava" src="<%= user.image %>"/>
    </div>
    <div class="col-sm-8">
      <div class="row">
        <%= user.name %>
      </div>
      <div class="row">
        <%= user.email %>
      </div>
    </div>
    <%= link_to 'Delete', "user", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <hr/>
<% end %>




