<div class="row">
  <h3 class="col-sm-4 col-sm-offset-1 " >Create device </h3>
</div>
<div class="row col-sm-offset-1">
    <%= form_for(@device) do |d| %>    
      <div class="form-group">  
        <%= d.label :name %>
        <%= d.text_field :name, class: "form-control" %>    
      </div>
      <div class="form-group">  
        <%= d.label :short_name %>
        <%= d.text_field :short_name, class: "form-control" %>    
      </div>
      <div class="form-group">  
        <%= d.label :description %>
        <%= d.text_field :description, class: "form-control" %>  
      </div>
      <div class="row margin-top">
          <div class="col-sm-9 text-center">
            <%= d.submit "Add", class: "btn btn-md btn-primary" %>
            <%= link_to 'Back', devices_path, class: "btn btn-md btn-primary" %>
          </div>        
      </div>    
    <% end %>
</div>
<div class="row">
  <div class="span4 col-sm-offset-1 form">
   
  </div>
</div>