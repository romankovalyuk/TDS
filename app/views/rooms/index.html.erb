<div class="row">
  <div class="col-sm-7 col-sm-offset-1">
    <h2 class="text-left no-margin">Rooms</h2>
  </div>  
  <div class="col-sm-4">
      <%= search_form_for @q do |f| %>

        <%= f.label :search %>
        <%= f.search_field :name_cont %>

        <%= f.submit class: "btn-primary search" %>
      <% end %>
  </div>  
</div>

<div class="row header">
	<div class="col-sm-2 col-sm-offset-1">
		Name
	</div>
	<div class="col-sm-2">
		Device
	</div>
	<div class="col-sm-3 col-sm-offset-4">
    	
	</div>   
</div>    
<% @rooms.each do |room| %>
<hr/>
    <div class="row">
    	<div class="col-sm-2 col-sm-offset-1">
    		<%= room.name %>
    	</div>
    	<div class="col-sm-4">
    		dd
    	</div>
    	<div class="col-sm-3 col-sm-offset-2">
	    	<div class="col-sm-2">
	    		<%= link_to 'Edit', edit_room_path(room) %> 
	    	</div>
	    	<div class="col-sm-2">
	    		<%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' } %>
	    	</div>   		
    	</div>   
    </div>    
  <hr/>
<% end %>
<div class="row">
	<div class="col-sm-1 col-sm-offset-1">
		<%= link_to 'Add', new_room_path, class: "btn btn-md btn-primary" %> 
	</div>
	<div class="col-sm-9 text-right">
     <%= paginate @rooms %>
  </div>
</div>




