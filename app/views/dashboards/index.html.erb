<h1 class="text-center">Dashboard</h1>

<div class="row main-margin-top">
    <div class="col-sm-1 col-sm-offset-1">
      User
    </div>
    <div class="col-sm-1 col-sm-offset-1">
      Device
    </div>
    <div class="col-sm-1 col-sm-offset-1">
      Room
    </div>
    <div class="col-sm-1 col-sm-offset-1">
      Date
    </div>
    <div class="col-sm-3 col-sm-offset-1">
      
    </div>   
  </div>    
<% @devices_location.each do |dl| %>
<hr/>
    <div class="row">
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.user.name %>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.device.name %>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.device.room.name %>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.updated_at %>
      </div>
      <div class="col-sm-3 col-sm-offset-1">
        <div class="col-sm-2">
          <%= link_to 'Edit', edit_dashboard_path(dl) %> 
        </div>
        <div class="col-sm-2">
          <%= link_to 'Delete', dl, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>      
      </div>   
    </div>    
  <hr/>
<% end %>
<div class="row">
  <div class="col-sm-1 col-sm-offset-1">
    <%= link_to 'Add', new_dashboard_path, class: "btn btn-large btn-primary" %> 
  </div>
</div>





