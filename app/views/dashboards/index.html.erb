<div class="row">
  <div class="col-sm-8 col-sm-offset-1">
    <h2 class="text-left no-margin">Dashboard</h2>
  </div>  
  <div class="col-sm-3">
      <%= search_form_for @q do |f| %>

        <%= f.label :search %>
        <%= f.search_field :device_name_or_user_name_or_room_name_cont %>

        <%= f.submit class: "btn-primary search" %>
      <% end %>
  </div>  
</div>

<div class="row header">
    <div class="col-sm-1 col-sm-offset-1">
      User
    </div>
    <div class="col-sm-1 col-sm-offset-1">
      Device
    </div>
    <div class="col-sm-1 col-sm-offset-1">
      Room
    </div>
    <div class="col-sm-1 col-sm-offset-1">
      Date
    </div>
    <div class="col-sm-3 col-sm-offset-1">
      
    </div>   
  </div>    
<% @dashboards.each do |dl| %>
<hr/>
    <div class="row">
      <div class="col-sm-1 col-sm-offset-1 no-left-padding">
        <div class="col-sm-6">
          <img class="board-ava" src="<%= dl.user.image %>"/>
        </div>
        <div class="col-sm-6" >
          <%= dl.user.name %>
        </div>        
      </div>
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.device.name %>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.room.name %>
      </div>
      <div class="col-sm-1 col-sm-offset-1">
        <%= dl.updated_at %>
      </div>
      <div class="col-sm-3 col-sm-offset-1">   
        <% if dl.user_id == current_user.id %>    
          <div class="col-sm-2">
            <%= link_to 'Edit', edit_dashboard_path(dl)  %> 
          </div>
        
          <div class="col-sm-2">
            <%= link_to 'Delete', dl, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>      
      </div>   
    </div>    
  <hr/>
<% end %>

 

<div class="row">
  <div class="col-sm-1 col-sm-offset-1">
    <%= link_to 'Add', new_dashboard_path, class: "btn btn-md btn-primary" %> 
  </div>
  <div class="col-sm-9 text-right">
     <%= will_paginate %>
  </div>
</div>





