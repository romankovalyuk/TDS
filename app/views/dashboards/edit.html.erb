
<div class="row">
  <h3 class="col-sm-4 col-sm-offset-1 " >Update dashboard </h3>
</div>

<div class="row">
  <div class="span4 offset4">
    <%= form_for(@dashboard) do |dl| %>
      <%= dl.label :device_id %>
      <%= dl.collection_select(:device_id, Device.all, :id, :name) %>

      <%= dl.label :room_id %>
      <%= dl.collection_select(:room_id, Room.all, :id, :name) %>

      <div class="row margin-top">
  	    <div class="col-sm-9 text-center">
  	      <%= dl.submit "Save", class: "btn btn-md btn-primary" %>
  	      <%= link_to 'Back', dashboards_path, class: "btn btn-md btn-primary" %>
  	    </div>        
      </div>      
    <% end %>
  </div>
</div>