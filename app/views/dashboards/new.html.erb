<div class="row">
  <div class="span4 offset4 ">
    <%= form_for @devices_location do |dl| %>      

      <%= dl.label :device_id %>
      <%= dl.collection_select(:device_id, Device.all, :id, :name) %>

      <%= dl.label :room_id %>
      <%= dl.collection_select(:room_id, Room.all, :id, :name) %>

      <%= dl.submit "Add", class: "btn btn-large btn-primary" %>
      <%= link_to 'Back', dashboards_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>